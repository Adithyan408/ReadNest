    <script>
      function changeMainImage(src) {
        const mainImage = document.getElementById("mainImage");

        mainImage.src = src;
        mainImage.setAttribute("data-zoom", src);

        initZoom(); // Reinitialize Drift with new zoom image

        document.querySelectorAll("img[onclick]").forEach((img) => {
          img.classList.remove("thumbnail-active");
        });
        event.target.classList.add("thumbnail-active");
      }

      const scrollBox = document.querySelector(".custom-scroll");

      scrollBox.addEventListener(
        "wheel",
        function (e) {
          // SCROLLING DOWN
          if (
            e.deltaY > 0 &&
            scrollBox.scrollTop + scrollBox.clientHeight >=
              scrollBox.scrollHeight
          ) {
            // Pass scroll to page
            window.scrollBy(0, e.deltaY);
            e.preventDefault();
          }

          // SCROLLING UP
          if (e.deltaY < 0 && scrollBox.scrollTop === 0) {
            window.scrollBy(0, e.deltaY);
            e.preventDefault();
          }
        },
        { passive: false }
      );

      //Image Zoom using Drift Library
      let drift;

      function initZoom() {
        const mainImage = document.getElementById("mainImage");

        // Destroy previous instance if exists (for thumbnail changes)
        if (drift) drift.disable();

        drift = new Drift(mainImage, {
          paneContainer: document.getElementById("zoom-pane"),
          inlinePane: false,
          hoverBoundingBox: true, // Flipkart-style moving box
          zoomFactor: 1.5,
          passive: false,
        });
      }

      initZoom();
    </script>
