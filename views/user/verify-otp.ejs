<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Verification Code - ReadNest</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&display=swap");

      * {
        font-family: "Poppins", sans-serif;
      }

      body {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
      }

      .form-container {
        animation: slideIn 0.5s ease-out;
      }

      @keyframes slideIn {
        from {
          opacity: 0;
          transform: translateY(30px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      .otp-input {
        width: 70px;
        height: 70px;
        font-size: 24px;
        font-weight: 600;
        text-align: center;
        border: none;
        outline: none;
        background: #d1b8b8;
        border-radius: 12px;
        transition: all 0.3s ease;
        caret-color: #667eea;
      }

      .otp-input:focus {
        background: #c9a8a8;
        box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.3);
        transform: scale(1.05);
      }

      .otp-input.filled {
        background: #b89898;
        color: #fff;
      }

      .otp-input.error {
        background: #fecaca;
        animation: shake 0.3s ease;
      }

      @keyframes shake {
        0%,
        100% {
          transform: translateX(0);
        }
        25% {
          transform: translateX(-5px);
        }
        75% {
          transform: translateX(5px);
        }
      }

      .confirm-btn {
        transition: all 0.3s ease;
      }

      .confirm-btn:hover:not(:disabled) {
        transform: translateY(-2px);
        box-shadow: 0 8px 16px rgba(79, 70, 229, 0.4);
      }

      .confirm-btn:disabled {
        opacity: 0.6;
        cursor: not-allowed;
      }

      .timer {
        color: #4b5563;
        font-weight: 600;
      }

      .timer.expired {
        color: #ef4444;
      }

      .resend-link {
        transition: all 0.2s ease;
      }

      .resend-link:hover {
        text-decoration: underline;
      }

      .resend-link.disabled {
        color: #9ca3af;
        cursor: not-allowed;
        pointer-events: none;
      }

      .success-message {
        display: none;
        animation: fadeIn 0.3s ease;
      }

      @keyframes fadeIn {
        from {
          opacity: 0;
        }
        to {
          opacity: 1;
        }
      }

      .error-message {
        display: none;
        animation: fadeIn 0.3s ease;
      }
    </style>
  </head>
  <body class="flex items-center justify-center min-h-screen p-4">
    <div
      class="form-container bg-gray-200 rounded-3xl shadow-2xl max-w-2xl w-full p-8 md:p-12"
    >
      <div class="mb-8">
        <h1 class="text-4xl font-bold text-gray-900 mb-4">Verification Code</h1>
        <p class="text-gray-700 text-lg">
          We have sent a verification code to your registered email address
          <b><%= email %></b>
        </p>
      </div>

      <div
        id="successMessage"
        style="display: none"
        class="mb-6 p-4 bg-green-100 border border-green-400 text-green-700 rounded-lg"
      >
        Verification successful! Redirecting...
      </div>

      <div
        id="errorMessage"
        style="display: none"
        class="mb-6 p-4 bg-red-100 border border-red-400 text-red-700 rounded-lg"
      >
        <span id="errorText">Invalid verification code. Please try again.</span>
      </div>

      <div class="flex justify-center gap-4 mb-6" id="otpContainer">
        <input
          type="text"
          maxlength="1"
          class="otp-input"
          id="otp1"
          data-index="0"
        />
        <input
          type="text"
          maxlength="1"
          class="otp-input"
          id="otp2"
          data-index="1"
        />
        <input
          type="text"
          maxlength="1"
          class="otp-input"
          id="otp3"
          data-index="2"
        />
        <input
          type="text"
          maxlength="1"
          class="otp-input"
          id="otp4"
          data-index="3"
        />
        <input
          type="text"
          maxlength="1"
          class="otp-input"
          id="otp5"
          data-index="4"
        />
        <input
          type="text"
          maxlength="1"
          class="otp-input"
          id="otp6"
          data-index="5"
        />
      </div>

      <div class="text-center mb-6">
        <p class="text-gray-700 font-medium mb-3">
          Send code again <span class="timer" id="timer">02:00</span>
        </p>
        <button
          id="resendLink"
          class="text-gray-700 font-medium disabled"
          onclick="resendCode()"
          disabled
        >
          I didn’t receive a code — Resend
        </button>
      </div>

      <button
        id="confirmBtn"
        onclick="verifyCode()"
        class="w-full bg-indigo-600 text-white font-bold text-2xl py-4 rounded-2xl hover:bg-indigo-700"
        disabled
      >
        Confirm
      </button>

      <div class="text-center mt-6">
        <a
          href="/signup"
          class="text-gray-600 hover:text-indigo-600 font-medium hover:underline"
        >
          ← Back to SignUp
        </a>
      </div>
    </div>
  </body>
  <script>
    
    const fromForgotPassword = "<%= fromForgotPassword %>";
    const isFromForgotPassword = (fromForgotPassword === 'true');
    sessionStorage.setItem("verificationEmail", "<%= email %>");

    let timeLeft = 120;
    let timerInterval;
    const otpInputs = document.querySelectorAll(".otp-input");
    const confirmBtn = document.getElementById("confirmBtn");
    const timerElement = document.getElementById("timer");
    const resendLink = document.getElementById("resendLink");

    document.addEventListener("DOMContentLoaded", () => {
      startTimer();
      setupOTPInputs();
      otpInputs[0].focus();
    });

    function startTimer() {
      resendLink.disabled = true;
      timeLeft = 59;
      clearInterval(timerInterval);

      timerInterval = setInterval(() => {
        timeLeft--;
        const minutes = Math.floor(timeLeft / 60);
        const seconds = timeLeft % 60;
        timerElement.textContent = `${String(minutes).padStart(
          2,
          "0"
        )}:${String(seconds).padStart(2, "0")}`;

        if (timeLeft <= 0) {
          clearInterval(timerInterval);
          resendLink.disabled = false;
          timerElement.textContent = "00:00";
        }
      }, 1000);
    }

    function setupOTPInputs() {
      otpInputs.forEach((input, index) => {
        input.addEventListener("input", () => {
          if (!/^\d*$/.test(input.value)) {
            input.value = "";
            return;
          }
          if (input.value && index < otpInputs.length - 1)
            otpInputs[index + 1].focus();
          checkAllFilled();
        });

        input.addEventListener("keydown", (e) => {
          if (e.key === "Backspace" && !input.value && index > 0)
            otpInputs[index - 1].focus();
        });
      });
    }

    function checkAllFilled() {
      const allFilled = Array.from(otpInputs).every(
        (input) => input.value !== ""
      );
      confirmBtn.disabled = !allFilled;
    }

    function getOTP() {
      return Array.from(otpInputs)
        .map((input) => input.value)
        .join("");
    }

    //  AJAX call for verifying OTP
    async function verifyCode() {
      const otp = getOTP();
      if (otp.length !== 6) return showError("Enter all 6 digits");

      confirmBtn.disabled = true;
      confirmBtn.textContent = "Verifying...";

      try {
        const res = await fetch(
          isFromForgotPassword ? "/forgot-verify-otp" : "/verify-otp",
          {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ otp }),
          }
        );

        const data = await res.json();

        if (data.success) {
          showSuccess("Verification successful! Redirecting...");
          setTimeout(() => {
            if (isFromForgotPassword) {
              window.location.href = `/reset-password?email=${encodeURIComponent(
                "<%= email %>"
              )}`;
            } else {
              window.location.href = "/";
            }
          }, 1000);
        }
      } catch (err) {
        showError("Something went wrong. Try again.");
        confirmBtn.disabled = false;
        confirmBtn.textContent = "Confirm";
      }
    }

    //  AJAX call for resending OTP
    async function resendCode() {
      if (resendLink.disabled) return;
      clearInterval(timerInterval);

      try {
        const email = sessionStorage.getItem("verificationEmail");
        const res = await fetch("/resend-otp", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ email }),
        });

        const data = await res.json();
        if (data.success) {
          showSuccess("New OTP sent to your email!");
          startTimer();
        } else {
          showError(data.message || "Failed to resend OTP");
        }
      } catch (err) {
        showError("Error resending OTP");
      }
    }

    function showError(msg) {
      const errorBox = document.getElementById("errorMessage");
      document.getElementById("errorText").textContent = msg;
      errorBox.style.display = "block";
      setTimeout(() => (errorBox.style.display = "none"), 5000);
    }

    function showSuccess(msg) {
      const successBox = document.getElementById("successMessage");
      successBox.textContent = msg;
      successBox.style.display = "block";
      setTimeout(() => (successBox.style.display = "none"), 5000);
    }
  </script>
</html>
