<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ReadNest - Online Book Store</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap");

      * {
        font-family: "Poppins", sans-serif;
      }
    </style>
  </head>
  <!-- Header -->
  <header class="bg-gray-300 shadow-sm sticky top-0 z-50">
    <div class="max-w-7xl mx-auto px-4 py-3">
      <div class="flex items-center justify-between">
        <!-- Logo -->
        <div class="flex items-center space-x-2">
          <!-- <div
            class="w-12 h-12 bg-orange-900 rounded-full flex items-center justify-center"
          >
            <i class="fas fa-book-open text-white text-xl"></i>
          </div> -->
          <div class="w-14 h-14 rounded-full overflow-hidden">
            <img
              src="/images/logo2.png"
              alt="ReadNest Logo"
              class="w-full h-full object-cover"
            />
          </div>

          <span class="text-xl font-bold text-gray-800">ReadNest</span>
        </div>

        <!-- Search Bar -->
        <div class="flex-1 max-w-md mx-8">
          <div class="relative">
            <input
              type="text"
              placeholder="Search"
              class="w-full pl-10 pr-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:border-orange-500"
            />
            <i
              class="fas fa-search absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"
            ></i>
          </div>
        </div>

        <!-- Right Menu -->
        <div class="flex items-center space-x-6">
          <button
            class="flex items-center space-x-2 px-4 py-2 bg-white rounded-lg border border-gray-300 hover:bg-gray-50"
          >
            <i class="fas fa-bars text-gray-700"></i>
            <span class="text-sm font-medium text-gray-700">BLOG</span>
          </button>

          <button class="relative">
            <i class="fas fa-shopping-cart text-2xl text-gray-700"></i>
            <span
              class="absolute -top-2 -right-2 bg-red-500 text-white text-xs w-5 h-5 rounded-full flex items-center justify-center"
              >2</span
            >
            <span class="text-sm font-medium text-gray-700 ml-1">Cart</span>
          </button>
          <% if (user) { %>
          <!-- Logged In User -->
          <a
            href="/profile"
            class="flex items-center space-x-2 hover:bg-gray-200 rounded-lg px-3 py-2 transition"
          >
            <i class="fas fa-user-circle text-2xl text-gray-700"></i>
            <span class="text-sm font-medium text-gray-700"
              ><%= user.name %></span
            >
            <i class="fas fa-chevron-down text-gray-700 text-xs"></i>
          </a>
          <% } else { %>
          <!-- Not Logged In -->
          <a href="/login" class="flex items-center space-x-2">
            <i class="fas fa-user-circle text-2xl text-gray-700"></i>
            <span class="text-sm font-medium text-gray-700">Login</span>
          </a>
          <% } %>
        </div>
      </div>
    </div>
  </header>
</html>
