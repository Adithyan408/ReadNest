<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Product - ReadNest</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&display=swap");

      * {
        font-family: "Poppins", sans-serif;
      }

      .sidebar-item {
        transition: all 0.3s ease;
      }

      .sidebar-item:hover {
        background-color: #d1d5db;
      }

      .sidebar-item.active {
        background-color: #d1d5db;
      }
    </style>
  </head>
  <body class="bg-gray-100">
    <!-- Header -->
    <header class="bg-gray-300 shadow-sm sticky top-0 z-50">
      <div class="flex items-center justify-between px-6 py-4">
        <!-- Logo -->
        <a href="/admin">
          <div class="flex items-center space-x-3">
            <div
              class="w-14 h-14 bg-orange-900 rounded-full flex items-center justify-center"
            >
              <i class="fas fa-book-open text-white text-2xl"></i>
            </div>
            <span class="text-2xl font-bold text-gray-800">ReadNest</span>
          </div>
        </a>

        <!-- Right Side -->
        <div class="flex items-center space-x-6">
          <button
            class="flex items-center space-x-2 px-6 py-2 bg-white rounded-lg border border-gray-400 hover:bg-gray-50 transition"
          >
            <i class="fas fa-blog text-gray-700"></i>
            <span class="text-base font-semibold text-gray-900">Blog</span>
          </button>

          <div class="flex items-center space-x-3">
            <i class="fas fa-user-circle text-4xl text-gray-600"></i>
            <span class="text-base font-semibold text-gray-600">ADMIN</span>
          </div>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <div class="flex">
      <!-- Sidebar -->
      <aside
        class="w-80 bg-gray-300 min-h-screen border-r border-gray-400 relative"
      >
        <nav class="py-4 pb-24">
          <a
            href="/admin"
            class="sidebar-item flex items-center px-6 py-4 border-b border-gray-400"
          >
            <i class="fas fa-th-large text-xl mr-4"></i>
            <span class="text-lg font-semibold text-gray-900">DashBoard</span>
          </a>

          <a
            href="/admin/products"
            class="sidebar-item active flex items-center px-6 py-4 border-b border-gray-400"
          >
            <i class="fas fa-box text-xl mr-4"></i>
            <span class="text-lg font-semibold text-gray-900">Products</span>
          </a>

          <a
            href="/admin/orders"
            class="sidebar-item flex items-center px-6 py-4 border-b border-gray-400"
          >
            <i class="fas fa-shopping-bag text-xl mr-4"></i>
            <span class="text-lg font-semibold text-gray-900">Orders List</span>
          </a>

          <a
            href="/admin/users"
            class="sidebar-item flex items-center px-6 py-4 border-b border-gray-400"
          >
            <i class="fas fa-users text-xl mr-4"></i>
            <span class="text-lg font-semibold text-gray-900">Customers</span>
          </a>

          <a
            href="/admin/sales"
            class="sidebar-item flex items-center px-6 py-4 border-b border-gray-400"
          >
            <i class="fas fa-chart-line text-xl mr-4"></i>
            <span class="text-lg font-semibold text-gray-900">Sales</span>
          </a>

          <a
            href="/admin/category"
            class="sidebar-item flex items-center px-6 py-4 border-b border-gray-400"
          >
            <i class="fas fa-th text-xl mr-4"></i>
            <span class="text-lg font-semibold text-gray-900">Category</span>
          </a>

          <a
            href="/admin/voucher"
            class="sidebar-item flex items-center px-6 py-4 border-b border-gray-400"
          >
            <i class="fas fa-ticket-alt text-xl mr-4"></i>
            <span class="text-lg font-semibold text-gray-900">Voucher</span>
          </a>

          <a
            href="/admin/banner"
            class="sidebar-item flex items-center px-6 py-4 border-b border-gray-400"
          >
            <i class="fas fa-image text-xl mr-4"></i>
            <span class="text-lg font-semibold text-gray-900">Banner</span>
          </a>
        </nav>

        <!-- Logout Button at Bottom -->
        <div
          class="absolute bottom-0 left-0 right-0 bg-gray-300 border-t-2 border-gray-400"
        >
          <a href="/admin/logout">
            <button
              class="w-full flex items-center px-6 py-5 hover:bg-red-50 transition-colors group"
            >
              <i
                class="fas fa-sign-out-alt text-xl mr-4 text-gray-700 group-hover:text-red-600"
              ></i>
              <span
                class="text-lg font-semibold text-gray-900 group-hover:text-red-600"
                >LOG OUT</span
              >
            </button>
          </a>
        </div>
      </aside>

      <!-- Main Content - Edit Product -->
      <main class="flex-1 p-8 bg-gray-200">
        <div class="bg-white rounded-2xl shadow-lg">
          <!-- Header Section -->
          <div class="p-6 border-b border-gray-200">
            <div class="flex items-center justify-between">
              <h2 class="text-3xl font-bold text-gray-900">
                Products >> <%= data.productName %>
              </h2>
              <a href="/admin/products">
                <button
                  class="px-6 py-2 bg-gray-500 text-white font-semibold rounded-lg hover:bg-gray-600 transition shadow-md"
                >
                  <i class="fas fa-arrow-left mr-2"></i>Back to Products
                </button>
              </a>
            </div>
          </div>

          <!-- Edit Form -->
          <div class="p-8">
            <form
              action="/admin/updateProduct?id=<%= data._id %>"
              method="POST"
              enctype="multipart/form-data"
            >
              <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                <!-- Left Column - Product Image -->
                <div class="space-y-6">
                  <div class="space-y-6">
                    <div class="bg-gray-100 rounded-2xl p-8">
                      <div class="text-center">
                        <% if (data.productImage && data.productImage.length >
                        0) { %>
                        <div
                          id="productImagePreviewContainer"
                          class="flex flex-wrap justify-center gap-4 mb-6"
                        >
                          <% data.productImage.forEach(image => { %>
                          <img
                            src="<%= image %>"
                            alt="Product Image"
                            class="w-40 h-56 object-cover rounded-lg shadow-lg"
                          />
                          <% }) %>
                        </div>
                        <% } else { %>
                        <div
                          id="productImagePreviewContainer"
                          class="w-64 h-80 bg-gray-300 rounded-lg flex items-center justify-center mx-auto mb-4"
                        >
                          <i class="fas fa-image text-gray-400 text-6xl"></i>
                        </div>
                        <% } %>

                        <!-- Selected File Names -->
                        <div
                          id="selectedFileNames"
                          class="text-sm text-gray-700 mb-4 text-center"
                        ></div>

                        <!-- Upload Button -->
                        <label
                          for="productImages"
                          class="inline-block px-6 py-3 bg-indigo-600 text-white font-semibold rounded-lg hover:bg-indigo-700 transition cursor-pointer shadow-md"
                        >
                          <i class="fas fa-upload mr-2"></i>Upload / Change
                          Images
                        </label>
                        <input
                          type="file"
                          id="productImages"
                          name="productImage"
                          accept="image/*"
                          multiple
                          class="hidden"
                          onchange="previewImage(event)"
                        />
                      </div>
                    </div>
                  </div>

                  <!-- Listing Status -->
                  <div class="bg-gray-50 rounded-xl p-6">
                    <h3 class="text-xl font-bold text-gray-900 mb-4">
                      Product Status
                    </h3>
                    <div class="flex items-center justify-between">
                      <span class="text-lg font-semibold text-gray-700"
                        >Listing Status:</span
                      >
                      <% if (data.isListed) { %>
                      <span
                        class="px-6 py-2 bg-green-200 text-green-800 rounded-full font-semibold"
                      >
                        <i class="fas fa-check-circle mr-2"></i>LISTED
                      </span>
                      <% } else { %>
                      <span
                        class="px-6 py-2 bg-red-200 text-red-800 rounded-full font-semibold"
                      >
                        <i class="fas fa-times-circle mr-2"></i>UNLISTED
                      </span>
                      <% } %>
                    </div>
                  </div>
                </div>

                <!-- Right Column - Product Details -->
                <div class="space-y-6">
                  <!-- Product Name -->
                  <div>
                    <label class="block text-lg font-bold text-gray-900 mb-2">
                      Product Name <span class="text-red-600">*</span>
                    </label>
                    <input
                      type="text"
                      name="productName"
                      value="<%= data.productName %>"
                      class="w-full px-4 py-3 bg-gray-50 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 text-base"
                      placeholder="Enter product name"
                    />
                  </div>

                  <!-- Product Number -->
                  <!-- <div>
                    <label class="block text-lg font-bold text-gray-900 mb-2">
                      Product Number <span class="text-red-600">*</span>
                    </label>
                    <input
                      type="text"
                      name="productNumber"
                      value="<%= data.productNumber || '' %>"
                      required
                      class="w-full px-4 py-3 bg-gray-50 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 text-base"
                      placeholder="Enter product number"
                    />
                  </div> -->

                  <!-- Category -->
                  <!-- Category -->
                  <div>
                    <label class="block text-lg font-bold text-gray-900 mb-2">
                      Category <span class="text-red-600">*</span>
                    </label>
                    <select
                      name="category"
                      class="w-full px-4 py-3 bg-gray-50 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 text-base cursor-pointer"
                    >
                      <option value=""><%= data.category %></option>
                      <% categories.forEach(category => { %>
                      <option value="<%= category.categoryName %>">
                        <%= category.categoryName %>
                      </option>
                      <% }) %>
                    </select>
                  </div>

                  <!-- Language -->
                  <div>
                    <label class="block text-lg font-bold text-gray-900 mb-2">
                      Language <span class="text-red-600">*</span>
                    </label>
                    <select
                      name="language"
                      class="w-full px-4 py-4 bg-white rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-indigo-500 text-base appearance-none cursor-pointer shadow-sm"
                    >
                      <option value=""><%= data.language%></option>
                      <option value="English">English</option>
                      <option value="Malayalam">Malayalam</option>
                    </select>
                  </div>

                  <!-- Description -->
                  <div>
                    <label class="block text-lg font-bold text-gray-900 mb-2">
                      Description
                    </label>
                    <textarea
                      name="description"
                      rows="3"
                      class="w-full px-4 py-3 bg-gray-50 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 text-base resize-none"
                      placeholder="Enter product description"
                    >
<%= data.description || '' %></textarea
                    >
                  </div>

                  <!-- Author -->
                  <div>
                    <label class="block text-lg font-bold text-gray-900 mb-2">
                      Author <span class="text-red-600">*</span>
                    </label>
                    <input
                      type="text"
                      name="author"
                      value="<%= data.author || '' %>"
                      class="w-full px-4 py-3 bg-gray-50 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 text-base"
                      placeholder="Enter author name"
                    />
                  </div>

                  <!-- Author Description -->
                  <div>
                    <label class="block text-lg font-bold text-gray-900 mb-2">
                      Author Description
                    </label>
                    <textarea
                      name="authorDescription"
                      rows="3"
                      class="w-full px-4 py-3 bg-gray-50 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 text-base resize-none"
                      placeholder="Enter author description"
                    >
<%= data.authorDescription || '' %></textarea
                    >
                  </div>

                  <!-- Publisher -->
                  <div>
                    <label class="block text-lg font-bold text-gray-900 mb-2">
                      Publisher <span class="text-red-600">*</span>
                    </label>
                    <input
                      type="text"
                      name="publisher"
                      value="<%= data.publisher || '' %>"
                      class="w-full px-4 py-3 bg-gray-50 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 text-base"
                      placeholder="Enter publisher name"
                    />
                  </div>

                  <!-- Year of Publishing -->
                  <div>
                    <label class="block text-lg font-bold text-gray-900 mb-2">
                      Year of Publishing <span class="text-red-600">*</span>
                    </label>
                    <input
                      type="number"
                      name="yearOfPublishing"
                      value="<%= data.yearOfPublishing || '' %>"
                      min="1800"
                      max="2100"
                      class="w-full px-4 py-3 bg-gray-50 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 text-base"
                      placeholder="Enter year of publishing"
                    />
                  </div>

                  <!-- Pages -->
                  <div>
                    <label class="block text-lg font-bold text-gray-900 mb-2">
                      Pages <span class="text-red-600">*</span>
                    </label>
                    <input
                      type="number"
                      name="pages"
                      value="<%= data.pages || '' %>"
                      min="1"
                      class="w-full px-4 py-3 bg-gray-50 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 text-base"
                      placeholder="Enter number of pages"
                    />
                  </div>

                  <!-- Regular Price -->
                  <div>
                    <label class="block text-lg font-bold text-gray-900 mb-2">
                      Regular Price <span class="text-red-600">*</span>
                    </label>
                    <input
                      type="number"
                      name="regularPrice"
                      value="<%= data.regularPrice || '' %>"
                      min="0"
                      step="0.01"
                      class="w-full px-4 py-3 bg-gray-50 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 text-base"
                      placeholder="Enter regular price"
                    />
                  </div>

                  <!-- Quantity (Stock) -->
                  <div>
                    <label class="block text-lg font-bold text-gray-900 mb-2">
                      Quantity <span class="text-red-600">*</span>
                    </label>
                    <input
                      type="number"
                      name="stock"
                      value="<%= data.stock || data.stock || '' %>"
                      min="0"
                      class="w-full px-4 py-3 bg-gray-50 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 text-base"
                      placeholder="Enter stock quantity"
                    />
                  </div>

                  <!-- ISBN Number -->
                  <div>
                    <label class="block text-lg font-bold text-gray-900 mb-2">
                      ISBN Number
                    </label>
                    <input
                      type="text"
                      name="isbnNumber"
                      value="<%= data.isbnNumber || '' %>"
                      class="w-full px-4 py-3 bg-gray-50 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 text-base"
                      placeholder="Enter ISBN number"
                    />
                  </div>
                </div>
              </div>

              <!-- Action Buttons -->
              <div
                class="flex justify-center items-center gap-6 mt-8 pt-8 border-t border-gray-200"
              >
                <!-- UPDATE Button -->
                <button
                  type="submit"
                  class="px-12 py-4 bg-green-600 text-white font-bold text-lg rounded-lg hover:bg-green-700 transition shadow-lg"
                >
                  <i class="fas fa-save mr-2"></i>UPDATE
                </button>

                <!-- DELETE Button -->
                <a
                  href="/admin/deleteProduct?id=<%= data._id %>"
                  onclick="return confirm('Are you sure you want to delete this product? This action cannot be undone.');"
                >
                  <button
                    type="button"
                    class="px-12 py-4 bg-red-600 text-white font-bold text-lg rounded-lg hover:bg-red-700 transition shadow-lg"
                  >
                    <i class="fas fa-trash-alt mr-2"></i>DELETE
                  </button>
                </a>

                <!-- CANCEL Button -->
                <a href="/admin/products">
                  <button
                    type="button"
                    class="px-12 py-4 bg-slate-500 text-white font-bold text-lg rounded-lg hover:bg-slate-600 transition shadow-lg"
                  >
                    <i class="fas fa-times mr-2"></i>CANCEL
                  </button>
                </a>
              </div>
            </form>
          </div>
        </div>
      </main>
    </div>

    <script>
      function previewImage(event) {
        const previewContainer = document.getElementById(
          "productImagePreviewContainer"
        );
        const fileNamesContainer = document.getElementById("selectedFileNames");

        previewContainer.innerHTML = ""; // Clear previous previews
        fileNamesContainer.innerHTML = ""; // Clear previous filenames

        const files = event.target.files;
        if (files.length > 0) {
          Array.from(files).forEach((file) => {
            const reader = new FileReader();
            reader.onload = function (e) {
              // Create image preview
              const img = document.createElement("img");
              img.src = e.target.result;
              img.className = "w-40 h-56 object-cover rounded-lg shadow-lg m-2";
              previewContainer.appendChild(img);
            };
            reader.readAsDataURL(file);

            // Show file names
            const fileName = document.createElement("p");
            fileName.textContent = file.name;
            fileName.className = "text-gray-600 text-sm font-medium";
            fileNamesContainer.appendChild(fileName);
          });
        }
      }
    </script>
  </body>
</html>
