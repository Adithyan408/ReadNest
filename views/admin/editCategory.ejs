<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Category - ReadNest</title>
    <script src="https://cdn.tailwindcss.com"></script>
     <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&display=swap");
      * {
        font-family: "Poppins", sans-serif;
      }
      .sidebar-item {
        transition: all 0.3s ease;
      }
      .sidebar-item:hover {
        background-color: #d1d5db;
        border-left: 4px solid #667eea;
      }
      .sidebar-item.active {
        background-color: #d1d5db;
        border-left: 4px solid #667eea;
      }
    </style>
  </head>
  <body class="bg-gray-100">
    <!-- Header -->
    <header class="bg-gray-300 shadow-sm sticky top-0 z-50">
      <div class="flex items-center justify-between px-6 py-4">
        <a href="/admin">
          <div class="flex items-center space-x-3">
            <div
              class="w-14 h-14 bg-orange-900 rounded-full flex items-center justify-center"
            >
              <i class="fas fa-book-open text-white text-2xl"></i>
            </div>
            <span class="text-2xl font-bold text-gray-800">ReadNest</span>
          </div>
        </a>
        <div class="flex items-center space-x-6">
          <button
            class="flex items-center space-x-2 px-6 py-2 bg-white rounded-lg border border-gray-400 hover:bg-gray-50 transition"
          >
            <i class="fas fa-blog text-gray-700"></i>
            <span class="text-base font-semibold text-gray-900">Blog</span>
          </button>
          <div class="flex items-center space-x-3">
            <i class="fas fa-user-circle text-4xl text-gray-600"></i>
            <span class="text-base font-semibold text-gray-600">ADMIN</span>
          </div>
        </div>
      </div>
    </header>

    <div class="flex">
      <!-- Sidebar -->
      <aside
        class="w-80 bg-gray-300 min-h-screen border-r border-gray-400 relative"
      >
        <nav class="py-4 pb-24">
          <a
            href="/admin/dashboard"
            class="sidebar-item flex items-center px-6 py-4 border-b border-gray-400"
          >
            <i class="fas fa-th-large text-xl mr-4"></i>
            <span class="text-lg font-semibold text-gray-900">DashBoard</span>
          </a>

          <a
            href="/admin/products"
            class="sidebar-item flex items-center px-6 py-4 border-b border-gray-400"
          >
            <i class="fas fa-box text-xl mr-4"></i>
            <span class="text-lg font-semibold text-gray-900">Products</span>
          </a>

          <a
            href="/admin/orders"
            class="sidebar-item flex items-center px-6 py-4 border-b border-gray-400"
          >
            <i class="fas fa-shopping-bag text-xl mr-4"></i>
            <span class="text-lg font-semibold text-gray-900">Orders List</span>
          </a>

          <a
            href="/admin/users"
            class="sidebar-item flex items-center px-6 py-4 border-b border-gray-400"
          >
            <i class="fas fa-users text-xl mr-4"></i>
            <span class="text-lg font-semibold text-gray-900">Customers</span>
          </a>

          <a
            href="/admin/sales"
            class="sidebar-item flex items-center px-6 py-4 border-b border-gray-400"
          >
            <i class="fas fa-chart-line text-xl mr-4"></i>
            <span class="text-lg font-semibold text-gray-900">Sales</span>
          </a>

          <a
            href="/admin/category"
            class="sidebar-item active flex items-center px-6 py-4 border-b border-gray-400"
          >
            <i class="fas fa-th text-xl mr-4"></i>
            <span class="text-lg font-semibold text-gray-900">Category</span>
          </a>

          <a
            href="/admin/voucher"
            class="sidebar-item flex items-center px-6 py-4 border-b border-gray-400"
          >
            <i class="fas fa-ticket-alt text-xl mr-4"></i>
            <span class="text-lg font-semibold text-gray-900">Voucher</span>
          </a>

          <a
            href="/admin/banner"
            class="sidebar-item flex items-center px-6 py-4 border-b border-gray-400"
          >
            <i class="fas fa-image text-xl mr-4"></i>
            <span class="text-lg font-semibold text-gray-900">Banner</span>
          </a>
        </nav>

        <div
          class="absolute bottom-0 left-0 right-0 bg-gray-300 border-t-2 border-gray-400"
        >
          <a href="/admin/logout">
            <button
              class="w-full flex items-center px-6 py-5 hover:bg-red-50 transition-colors group"
            >
              <i
                class="fas fa-sign-out-alt text-xl mr-4 text-gray-700 group-hover:text-red-600"
              ></i>
              <span
                class="text-lg font-semibold text-gray-900 group-hover:text-red-600"
                >Log Out</span
              >
            </button>
          </a>
        </div>
      </aside>

      <!-- Main Content -->
      <main class="flex-1 p-8 bg-white">
        <div class="max-w-2xl">
          <div class="flex items-center justify-between mb-8">
            <div class="flex items-center">
              <a
                href="/admin/category"
                class="mr-4 text-gray-800 hover:text-gray-600"
              >
                <i class="fas fa-chevron-left text-2xl"></i>
              </a>
              <h2 class="text-3xl font-bold text-gray-900">Edit Category</h2>
            </div>
            <button
                  type="button"
                  onclick="confirmDelete('<%= category._id %>')"
                  class="px-12 py-4 bg-red-600 text-white font-bold text-lg rounded-lg hover:bg-red-700 transition shadow-lg"
                >
                  <i class="fas fa-trash-alt mr-2"></i>DELETE
                </button>
            >
          </div>

          <form
            id="categoryForm"
            class="space-y-6"
            action="/admin/editCategory?id=<%= category._id %>"
            method="POST"
          >
            <div>
              <label class="block text-sm font-semibold text-gray-700 mb-2"
                >Category Number</label
              >
              <input
                type="text"
                id="categoryNumber"
                name="categoryNumber"
                value="<%= category.categoryNumber %>"
                class="w-full px-6 py-4 bg-gray-200 rounded-lg text-gray-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 border-none text-lg"
              />
            </div>

            <div>
              <label class="block text-sm font-semibold text-gray-700 mb-2"
                >Category Name</label
              >
              <input
                type="text"
                id="categoryName"
                name="categoryName"
                value="<%= category.categoryName %>"
                class="w-full px-6 py-4 bg-gray-200 rounded-lg text-gray-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 border-none text-lg"
              />
            </div>

            <!-- <div>
              <label class="block text-sm font-semibold text-gray-700 mb-2"
                >Sales</label
              >
              <input
                type="number"
                id="sales"
                name="sales"
                value="<%= category.sales %>"
                class="w-full px-6 py-4 bg-gray-200 rounded-lg text-gray-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 border-none text-lg"
              />
            </div> -->

            <!-- <div>
              <label class="block text-sm font-semibold text-gray-700 mb-2"
                >Stock</label
              >
              <input
                type="number"
                id="stock"
                name="stock"
                value="<%= category.stock %>"
                class="w-full px-6 py-4 bg-gray-200 rounded-lg text-gray-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 border-none text-lg"
              />
            </div> -->

            <div class="flex items-center space-x-4 pt-4">
              <button
                type="submit"
                class="px-12 py-3 bg-indigo-600 text-white font-bold text-lg rounded-lg hover:bg-indigo-700 transition shadow-md"
              >
                Update Category
              </button>
              <a
                href="/admin/category"
                class="px-12 py-3 bg-gray-300 text-gray-700 font-bold text-lg rounded-lg hover:bg-gray-400 transition text-center"
              >
                Cancel
              </a>
            </div>
          </form>
        </div>
      </main>
    </div>
  </body>
  <script>
    function confirmDelete(categoryId) {
        Swal.fire({
          title: "Are you sure?",
          text: "This action cannot be undone!",
          icon: "warning",
          showCancelButton: true,
          confirmButtonColor: "#d33", // Red for delete
          cancelButtonColor: "#6b7280", // Gray
          confirmButtonText: "Yes, delete it!",
          cancelButtonText: "Cancel",
          reverseButtons: true,
          focusCancel: true,
        }).then((result) => {
          if (result.isConfirmed) {
            // Redirect to your delete route
            window.location.href = `/admin/deleteCategory?id=${categoryId}`;
          }
        });
      }
  </script>
</html>
