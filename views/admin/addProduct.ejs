<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add Product - ReadNest</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&display=swap");

      * {
        font-family: "Poppins", sans-serif;
      }

      .sidebar-item {
        transition: all 0.3s ease;
      }

      .sidebar-item:hover {
        background-color: #d1d5db;
      }

      .sidebar-item.active {
        background-color: #d1d5db;
      }

      .upload-area {
        border: 2px dashed #cbd5e0;
        transition: all 0.3s ease;
      }

      .upload-area:hover {
        border-color: #667eea;
        background-color: #f7fafc;
      }

      .quantity-btn {
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        border: 1px solid #d1d5db;
        background-color: white;
        cursor: pointer;
        transition: all 0.2s;
      }

      .quantity-btn:hover {
        background-color: #f3f4f6;
      }

      .quantity-input {
        width: 80px;
        text-align: center;
        border: 1px solid #d1d5db;
        border-left: none;
        border-right: none;
      }
    </style>
  </head>
  <body class="bg-gray-100">
    <!-- Header -->
    <header class="bg-gray-300 shadow-sm sticky top-0 z-50">
      <div class="flex items-center justify-between px-6 py-4">
        <!-- Logo -->
        <a href="/admin">
          <div class="flex items-center space-x-3">
            <div
              class="w-14 h-14 bg-orange-900 rounded-full flex items-center justify-center"
            >
              <i class="fas fa-book-open text-white text-2xl"></i>
            </div>
            <span class="text-2xl font-bold text-gray-800">ReadNest</span>
          </div>
        </a>

        <!-- Right Side -->
        <div class="flex items-center space-x-6">
          <button
            class="flex items-center space-x-2 px-6 py-2 bg-white rounded-lg border border-gray-400 hover:bg-gray-50 transition"
          >
            <i class="fas fa-blog text-gray-700"></i>
            <span class="text-base font-semibold text-gray-900">Blog</span>
          </button>

          <div class="flex items-center space-x-3">
            <i class="fas fa-user-circle text-4xl text-gray-600"></i>
            <span class="text-base font-semibold text-gray-600">ADMIN</span>
          </div>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <div class="flex">
      <!-- Sidebar -->
      <aside
        class="w-80 bg-gray-300 min-h-screen border-r border-gray-400 relative"
      >
        <nav class="py-4 pb-24">
          <a
            href="/admin"
            class="sidebar-item flex items-center px-6 py-4 border-b border-gray-400"
          >
            <i class="fas fa-th-large text-xl mr-4"></i>
            <span class="text-lg font-semibold text-gray-900">DashBoard</span>
          </a>

          <a
            href="/admin/products"
            class="sidebar-item active flex items-center px-6 py-4 border-b border-gray-400"
          >
            <i class="fas fa-box text-xl mr-4"></i>
            <span class="text-lg font-semibold text-gray-900">Products</span>
          </a>

          <a
            href="/admin/orders"
            class="sidebar-item flex items-center px-6 py-4 border-b border-gray-400"
          >
            <i class="fas fa-shopping-bag text-xl mr-4"></i>
            <span class="text-lg font-semibold text-gray-900">Orders List</span>
          </a>

          <a
            href="/admin/users"
            class="sidebar-item flex items-center px-6 py-4 border-b border-gray-400"
          >
            <i class="fas fa-users text-xl mr-4"></i>
            <span class="text-lg font-semibold text-gray-900">Customers</span>
          </a>

          <a
            href="/admin/sales"
            class="sidebar-item flex items-center px-6 py-4 border-b border-gray-400"
          >
            <i class="fas fa-chart-line text-xl mr-4"></i>
            <span class="text-lg font-semibold text-gray-900">Sales</span>
          </a>

          <a
            href="/admin/category"
            class="sidebar-item flex items-center px-6 py-4 border-b border-gray-400"
          >
            <i class="fas fa-th text-xl mr-4"></i>
            <span class="text-lg font-semibold text-gray-900">Category</span>
          </a>

          <a
            href="/admin/voucher"
            class="sidebar-item flex items-center px-6 py-4 border-b border-gray-400"
          >
            <i class="fas fa-ticket-alt text-xl mr-4"></i>
            <span class="text-lg font-semibold text-gray-900">Voucher</span>
          </a>

          <a
            href="/admin/banner"
            class="sidebar-item flex items-center px-6 py-4 border-b border-gray-400"
          >
            <i class="fas fa-image text-xl mr-4"></i>
            <span class="text-lg font-semibold text-gray-900">Banner</span>
          </a>
        </nav>

        <!-- Logout Button at Bottom -->
        <div
          class="absolute bottom-0 left-0 right-0 bg-gray-300 border-t-2 border-gray-400"
        >
          <a href="/admin/logout">
            <button
              class="w-full flex items-center px-6 py-5 hover:bg-red-50 transition-colors group"
            >
              <i
                class="fas fa-sign-out-alt text-xl mr-4 text-gray-700 group-hover:text-red-600"
              ></i>
              <span
                class="text-lg font-semibold text-gray-900 group-hover:text-red-600"
                >LOG OUT</span
              >
            </button>
          </a>
        </div>
      </aside>

      <!-- Main Content - Add Product Form -->
      <main class="flex-1 p-8 bg-gray-200">
        <div class="max-w-6xl">
          <!-- Page Title -->
          <div class="flex items-center mb-6">
            <a href="/admin/products" class="mr-4">
              <i
                class="fas fa-chevron-left text-2xl text-gray-700 hover:text-gray-900"
              ></i>
            </a>
            <h2 class="text-3xl font-bold text-gray-900">Add Products</h2>
          </div>

          <!-- Form -->
          <form
            action="/admin/addProducts"
            method="POST"
            enctype="multipart/form-data"
          >
            <% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
            <div id="errorMsg" class="text-red-600 font-semibold mb-3">
              <%= errorMessage %>
            </div>
            <% } else { %>
            <div
              id="errorMsg"
              class="text-red-600 font-semibold mb-3 hidden"
            ></div>
            <% } %>
            <div class="space-y-6">
              <!-- Row 1: Product Number, Product Name, Product Description -->
              <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <div>
                  <input
                    type="text"
                    name="productName"
                    placeholder="Product Name *"
                    class="w-full px-4 py-4 bg-white rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-indigo-500 text-base"
                  />
                </div>
                <div>
                  <textarea
                    name="description"
                    placeholder="Product Description *"
                    rows="3"
                    class="w-full px-4 py-4 bg-white rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-indigo-500 text-base resize-none"
                  ></textarea>
                </div>
              </div>

              <!-- Row 2: Category and Language -->
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-6">
                <!-- Category Dropdown -->
                <div>
                  <select
                    name="category"
                    class="w-full px-4 py-4 bg-white rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-indigo-500 text-base appearance-none cursor-pointer shadow-sm"
                  >
                    <option value="">Select Category *</option>
                    <% categories.forEach(category => { %>
                    <option value="<%= category.categoryName %>">
                      <%= category.categoryName %>
                    </option>
                    <% }) %>
                  </select>
                </div>

                <!-- Language Dropdown -->
                <div>
                  <select
                    name="language"
                    class="w-full px-4 py-4 bg-white rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-indigo-500 text-base appearance-none cursor-pointer shadow-sm"
                  >
                    <option value="">Language *</option>
                    <option value="English">English</option>
                    <option value="Malayalam">Malayalam</option>
                  </select>
                </div>
              </div>

              <!-- Row 3: Author Name and Author Description -->
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <input
                    type="text"
                    name="author"
                    placeholder="Author name"
                    class="w-full px-4 py-4 bg-white rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-indigo-500 text-base"
                  />
                </div>
                <div>
                  <textarea
                    name="authorDescription"
                    placeholder="Author Description"
                    rows="3"
                    class="w-full px-4 py-4 bg-white rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-indigo-500 text-base resize-none"
                  ></textarea>
                </div>
              </div>

              <!-- Row 4: Publisher, Year of Publishing, Number of Pages -->
              <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <div>
                  <input
                    type="text"
                    name="publisher"
                    placeholder="Publisher"
                    class="w-full px-4 py-4 bg-white rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-indigo-500 text-base"
                  />
                </div>
                <div>
                  <input
                    type="text"
                    name="yearOfPublishing"
                    placeholder="Year Of Publishing"
                    class="w-full px-4 py-4 bg-white rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-indigo-500 text-base"
                  />
                </div>
                <div>
                  <input
                    type="number"
                    name="pages"
                    placeholder="Number of Pages"
                    class="w-full px-4 py-4 bg-white rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-indigo-500 text-base"
                  />
                </div>
              </div>

              <!-- Row 5: Translator and Translator Description -->
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <input
                    type="text"
                    name="translator"
                    placeholder="Translator"
                    class="w-full px-4 py-4 bg-white rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-indigo-500 text-base"
                  />
                </div>
                <div>
                  <textarea
                    name="translatorDescription"
                    placeholder="Translator Description"
                    rows="3"
                    class="w-full px-4 py-4 bg-white rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-indigo-500 text-base resize-none"
                  ></textarea>
                </div>
              </div>

              <!-- Row 6: Translated Language and ISBN Number -->
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <select
                    name="translatedLanguage"
                    class="w-full px-4 py-4 bg-white rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-indigo-500 text-base appearance-none cursor-pointer"
                  >
                    <option value="">Translated Language</option>
                    <option value="english">English</option>
                    <option value="malayalam">Malayalam</option>
                  </select>
                </div>
                <div class="relative">
                  <input
                    type="text"
                    name="isbnNumber"
                    placeholder="ISBN Number"
                    class="w-full px-4 py-4 pr-12 bg-white rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-indigo-500 text-base"
                  />
                  <i
                    class="fas fa-barcode absolute right-4 top-1/2 transform -translate-y-1/2 text-gray-400 text-xl"
                  ></i>
                </div>
              </div>

              <!-- Row 7: Price and Stock (Quantity) -->
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <input
                    type="number"
                    name="regularPrice"
                    placeholder="Price *"
                    step="0.01"
                    class="w-full px-4 py-4 bg-white rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-indigo-500 text-base"
                  />
                </div>
                <div>
                  <div class="flex items-center">
                    <span class="text-gray-700 font-medium mr-4 text-base"
                      >Quantity</span
                    >
                    <div class="flex items-center">
                      <button
                        type="button"
                        class="quantity-btn rounded-l-lg"
                        onclick="decrementQuantity()"
                      >
                        <i class="fas fa-minus text-sm"></i>
                      </button>
                      <input
                        type="number"
                        name="stock"
                        id="quantityInput"
                        value="0"
                        min="0"
                        class="quantity-input px-4 py-4 focus:outline-none focus:ring-2 focus:ring-indigo-500 text-base text-center"
                        required
                      />
                      <button
                        type="button"
                        class="quantity-btn rounded-r-lg"
                        onclick="incrementQuantity()"
                      >
                        <i class="fas fa-plus text-sm"></i>
                      </button>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Image Upload Section -->
              <div class="bg-white rounded-lg p-8">
                <div class="upload-area rounded-lg p-12 text-center">
                  <div class="mb-4">
                    <i class="fas fa-image text-6xl text-gray-400"></i>
                  </div>
                  <p class="text-gray-600 mb-2">
                    Drag and drop image or Click add image
                  </p>
                  <input
                    type="file"
                    name="productImage"
                    id="productImage"
                    accept="image/*"
                    multiple
                    class="hidden"
                  />
                  <button
                    type="button"
                    onclick="document.getElementById('productImage').click()"
                    class="mt-4 px-8 py-3 bg-indigo-600 text-white font-semibold rounded-lg hover:bg-indigo-700 transition"
                  >
                    ADD IMAGE
                  </button>
                  <div id="imagePreview" class="mt-4"></div>
                </div>
              </div>

              <!-- Submit Button -->
              <div class="flex justify-center pt-4">
                <button
                  type="submit"
                  class="px-16 py-4 bg-indigo-600 text-white text-lg font-bold rounded-lg hover:bg-indigo-700 transition shadow-lg"
                >
                  ADD Product
                </button>
              </div>
            </div>
          </form>
        </div>
      </main>
    </div>
  </body>
  <script>
    function incrementQuantity() {
      const input = document.getElementById("quantityInput");
      input.value = parseInt(input.value) + 1;
    }

    function decrementQuantity() {
      const input = document.getElementById("quantityInput");
      if (parseInt(input.value) > 0) {
        input.value = parseInt(input.value) - 1;
      }
    }
  </script>
</html>
